<!-- include header layout -->
<%- include('../../layouts/header.ejs') %>

<!-- include sidebar layout -->
<%- include('../../layouts/sidebar.ejs') %> 
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <%- include('../../layouts/navbar.ejs') %>
    <!-- End Navbar -->
    <div class="container-fluid py-4">

      <!-- Main Content -->
      <% if (alert.message != '') { %>
      <div class="alert alert-<%= alert.status %> text-white" role="alert">
          <%= alert.message %>
      </div>
      <% } %>

      <% if (action === 'view') { %>
      <div class="card">
        <div class="card-header pb-0 p-3 d-flex justify-content-end">
          <div class="w-25">
            <div class="nav-wrapper position-relative end-0">
              <ul class="nav nav-pills nav-fill p-1" role="tablist">
                <li class="nav-item">
                  <a class="nav-link mb-0 px-0 py-1 active" data-bs-toggle="tab" data-bs-target="#show-item" href="#profile-tabs-icons" role="tab" aria-controls="preview" aria-selected="true">
                  <span class="material-icons align-middle mb-1">
                    laptop
                  </span>
                  My Project
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link mb-0 px-0 py-1" data-bs-toggle="tab" data-bs-target="#add-item" href="#dashboard-tabs-icons" role="tab" aria-controls="code" aria-selected="false">
                    <span class="material-icons align-middle mb-1">
                      add
                    </span>
                    Add Project
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <!-- Tab panes -->
        <div class="tab-content px-3 mt-3">
          <div class="tab-pane active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
            <%- include('table.ejs') %>
          </div>
          <div class="tab-pane" id="add-item" role="tabpanel" aria-labelledby="add-item-tab">
            <%- include('add_project_form.ejs', categories, stacks) %>
          </div>
        </div>
      </div>
      <% } else if (action === 'edit') { %>
      <%- include('edit_project.ejs', project, categories, stacks, stackSelected) %>
      <% } else { %>
      <%- include('detail_project.ejs', project) %>
      <% } %>
      
      <!-- End Main Content -->
      
      <!-- include footer layout -->
      <%- include('../../layouts/footer.ejs') %>
    </div>
  </main>
  <!-- include setting layout -->
  <%- include('../../layouts/setting.ejs') %>

  <!--   Core JS Files   -->
  <%- include('../../layouts/script.ejs') %>

  <script>
    ClassicEditor
      .create(document.querySelector('#description'))
      .then(editor => {
        // console.log( editor );
      })
      .catch( error => {
        console.error( error );
      });
  </script>
</body>

</html>