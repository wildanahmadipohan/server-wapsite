<div class="card">
  <div class="card-header pb-0 p-3">
    <h6 class="mb-0">Edit Project</h6>
  </div>
  <div class="card-body">
    <form action="/admin/project?_method=PUT" method="POST" enctype="multipart/form-data" class="px-3">
      <input type="hidden" name="id" value="<%= project._id %>">
      <div class="input-group input-group-static mb-4">
        <label>Name</label>
        <input type="text" name="name" class="form-control" value="<%= project.name %>" required>
      </div>
      <div class="input-group input-group-static mb-4">
        <label>Tags</label>
        <input type="text" name="tags" class="form-control" value="<%- project.tag.join(' ') %>" required>
      </div>
      <div class="input-group input-group-static mb-4">
        <label for="category" class="ms-0">Category</label>
        <select class="form-control" id="category" name="category">
          <option>--- Select Category ---</option>
          <% categories.forEach((category) => { %>
            <option <%- project.categoryId._id.toString() == category._id.toString() ? "selected" : "" %> value="<%= category._id %>"><%= category.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="input-group input-group-static mb-4">
        <label for="stacks" class="ms-0">Stacks</label>
        <select class="form-control pb-4" multiple id="stacks" name="stacks">
          <% stacks.forEach((stack) => { %>
            <option <%- stackSelected.includes(stack._id.toString()) ? 'selected' : '' %> value="<%= stack._id %>"><%= stack.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="input-group input-group-static mb-4">
        <label for="image">Image</label>
        <input class="form-control" type="file" name="image" id="image" multiple>
      </div>
      <div class="input-group input-group-static mb-4">
        <textarea class="form-control" id="description" name="description" rows="3">
          <%= project.description %>
        </textarea>
      </div>
      <a href="/admin/project" class="btn bg-gradient-secondary">Back</a>
      <button type="submit" class="btn bg-gradient-primary">Update</button>
    </form>
  </div>
</div>